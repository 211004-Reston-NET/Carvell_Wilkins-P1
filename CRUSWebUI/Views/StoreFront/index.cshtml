@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<CRUSWebUI.Models.StoreFrontVM>

    <h1 class="display-4">List of Store Fronts </h1>
    <br />

    @*<br />
    <h1>@ViewData["CustomerName"]</h1>
    <h1>@ViewData["CustomerEmail"]</h1>*@

    <a class="btn btn-primary text-white" asp-controller="StoreFront" asp-action="Create">Add Store Front</a>
    <br /> <!-- This br tag will space between elements -->
    <br />
    
    <h1>@ViewData["CustomerName"]</h1>
    <h1>@ViewData["CustomerEmail"]</h1>

    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Address</th>
        </tr>
        @foreach (StoreFrontVM item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    <button class="btn btn-primary">@Html.ActionLink("Products", "Index", "Product", new { p_id = item.StoreFrontId }, new { @style = "color: white" })</button>
                </td>
            </tr>
        }
    </table>
