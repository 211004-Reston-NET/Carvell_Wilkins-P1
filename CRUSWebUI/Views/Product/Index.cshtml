@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<CRUSWebUI.Models.ProductVM>

    <h1 class="display-4">List of Products</h1>

    <a class="btn btn-primary text-white" asp-controller="Product" asp-action="Create">Add Product</a>
    <br /> <!-- This br tag will space between elements -->
    <br />

    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
          
        </tr>
        @foreach (ProductVM item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            </tr>
        }
    </table>
