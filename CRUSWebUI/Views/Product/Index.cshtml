@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<CRUSWebUI.Models.ProductVM>

    <h1 class="display-4">List of Product</h1>
    @*<br />
        <h1>@ViewBag["Customer Name"]</h1>
        <h1>@ViewBag["Customer Email"]</h1>*@



    <a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
    <br /> <!-- This br tag will space between elements -->
    <br />
    <h1>@ViewData["CustomerName"]</h1>
    <h1>@ViewData["CustomerAddress"]</h1>

    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>ProductId</th>
            <th>StoreFrontId</th>
        </tr>
        @foreach (ProductVM item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
        <td>@Html.DisplayFor(modelItem => item.StoreFrontId)</td>
        <td>
            <!--First parameter of ActionLink is the name it will give for this element -->
            <!--Second parameter will point to the action of the restaurant controller-->
            <!--Third parameter will give the information from the view to the controller-->
            <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { ProductId = item.ProductId }, new { @style = "color: white;" })</button>
            <button class="btn btn-danger">@Html.ActionLink("Place Order", "Index", "OrderPlacement", new { @style = "color: white;" })</button>
        </td>
    </tr>
        }
    </table>
