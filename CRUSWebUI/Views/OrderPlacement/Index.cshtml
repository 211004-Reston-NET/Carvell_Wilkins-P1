@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<CRUSWebUI.Models.OrderPlacementVM>

    <h1 class="display-4">Welcome @ViewData["CustomerName"]  </h1>

    <h1 class="display-4">List of Orders</h1>
    @*<br />
        <h1>@ViewBag["Customer Name"]</h1>
        <h1>@ViewBag["Customer Email"]</h1>*@



    <a class="btn btn-primary text-white" asp-controller="OrderPlacement" asp-action="Create">Add OrderPlacement</a>
    <br /> <!-- This br tag will space between elements -->
    <br />
    <h1>@ViewData["CustomerName"]</h1>
    <h1>@ViewData["CustomerAddress"]</h1>

    <table class="table table-striped table-hover">
        <tr>
            <th>CustomerId</th>
            <th>StoreFrontId</th>
            <th>ProductId</th>
            <th>Price</th>
            <th>OrderId</th>
        </tr>
        @* ****commented this out in oder to scaffel my table. 11/16 *@
        @foreach (OrderPlacementVM item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
        <td>@Html.DisplayFor(modelItem => item.StoreFrontId)</td>
        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
        <td>@Html.DisplayFor(modelItem => item.OrderId)</td>

        <td>
            <!--First parameter of ActionLink is the name it will give for this element -->
            <!--Second parameter will point to the action of the restaurant controller-->
            <!--Third parameter will give the information from the view to the controller-->
            <button class="btn btn-danger">@Html.ActionLink("Delete Order", "Delete", new { OrderId = item.OrderId }, new { @style = "color: white;" })</button>
            <button class="btn btn-primary">@Html.ActionLink("Add Order", "Create", new { OrderId = item.OrderId }, new { @style = "color: white" })</button>
        </td>
    </tr>
        } 
    </table>

    <br />
    <br />
    <a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Details">Login Page</a>


