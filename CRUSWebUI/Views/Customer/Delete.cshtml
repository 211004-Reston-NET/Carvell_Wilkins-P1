@{
}

@model CRUSWebUI.Models.CustomerVM

<h1 class="display-4">Delete Customer Information</h1>
<h3>You sure you want to delete Your information?</h3>

<div>
    <dl>
        <dt>
            Id:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.CustomerId)</span>
        </dt>
        <dt>
            Name:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.Name)</span>
        </dt>
        <dt>
            Email:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.Email)</span>
        </dt>
        <dt>
            Address:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.Address)</span>
        </dt>

        <!--We need a form to do a post request-->
        <form asp-action="Delete">
            <!--
                This input element is hidden because we don't want the user to input some id instead we are just supplying the id w
                Already have
            -->
            <input type="hidden" asp-for="CustomerId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </dl>
</div>