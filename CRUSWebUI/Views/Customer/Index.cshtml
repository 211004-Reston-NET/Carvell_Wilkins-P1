@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<CRUSWebUI.Models.CustomerVM>

    <h1 class="display-4">List of Customers</h1>

    <a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
    <br /> <!-- This br tag will space between elements -->
    <br />

    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Customer_Id</th>
        </tr>
        @foreach(CustomerVM item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Address)</td>
        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
        <td>
            <!--First parameter of ActionLink is the name it will give for this element -->
            <!--Second parameter will point to the action of the restaurant controller-->
            <!--Third parameter will give the information from the view to the controller-->
            <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { CustomerId = item.CustomerId }, new { @style = "color: white;" })</button>
            @*<button class="btn btn-primary">@Html.ActionLink("Reviews", "Index", "Review", new { p_id = item.CustomerId }, new { @style = "color: white" })</button>*@
        </td>
    </tr>
        }
    </table>
